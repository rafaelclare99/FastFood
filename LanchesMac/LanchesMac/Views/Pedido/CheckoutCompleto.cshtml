@model Pedido

<div class="container my-5">
    <div class="text-center mb-4">
        <h2 class="text-success">@ViewBag.CheckouCompletoMensagem</h2>
        <p class="text-muted">Obrigado pela sua compra! Aqui estão os detalhes do seu pedido:</p>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <h5 class="card-title">Informações do Pedido</h5>
            <hr />
            <p><strong>Cliente:</strong> @Model.Nome</p>
            <p><strong>Data do Pedido:</strong> @Model.PedidoEnviado.ToString("dd/MM/yyyy HH:mm")</p>
            <p><strong>Número do Pedido:</strong> @Model.PedidoId</p>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <h5 class="card-title">Itens do Pedido</h5>
            <hr />
            <table class="table table-striped align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Imagem</th>
                        <th>Quantidade</th>
                        <th>Lanche</th>
                        <th>Preço Unitário</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.PedidoItens)
                    {
                        <tr>
                            <td>
                                <img src="@item.Lanche.ImagemUrl" class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;" />
                            </td>
                            <td>@item.Quantidade</td>
                            <td>@item.Lanche.LancheNome</td>
                            <td>@item.Lanche.Preco.ToString("c2")</td>
                            <td>@( (item.Lanche.Preco * item.Quantidade).ToString("c2") )</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="text-end mt-3">
                <h4>
                    Total do Pedido:
                    <span class="text-success fw-bold">
                        @(((decimal)ViewBag.TotalPedido).ToString("c2"))
                    </span>
                </h4>
            </div>
        </div>
    </div>

    <div class="text-center">
        <a class="btn btn-outline-primary btn-lg px-4" asp-controller="Home" asp-action="Index">
            Retornar à Página Inicial
        </a>
    </div>
</div>
