@model LoginViewModel

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg rounded-4" style="width: 380px;">
        <div class="card-body p-4">
            <div class="text-center mb-3">
                <img src="~/Image/LoginIcon.png"
                     alt="Fazer Login"
                     class="rounded-circle shadow mb-3"
                     style="width: 80px; height: 80px; object-fit: cover;" />
                <h4 class="fw-bold text-success">Bem-vindo ao LanchesMac 🍔</h4>
                <p class="text-muted">Entre para fazer seu pedido!</p>
            </div>

            <form asp-controller="Account" asp-action="Login" method="post">
                <input type="hidden" asp-for="ReturnUrl" />

                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="UserName" class="form-label fw-semibold"></label>
                    <input asp-for="UserName" class="form-control rounded-pill" placeholder="Digite seu usuário" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-semibold"></label>
                    <input asp-for="Password" type="password" class="form-control rounded-pill" placeholder="Digite sua senha" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>                

                <div class="d-grid">
                    <button type="submit" class="btn btn-success rounded-pill fw-bold">
                        Entrar
                    </button>
                </div>
            </form>

            <div class="text-center mt-4">
                <span class="text-muted">Não tem conta?</span>
                <a asp-controller="Account" asp-action="Register" class="fw-bold text-success ms-1">Cadastre-se</a>
            </div>
        </div>
    </div>
</div>
