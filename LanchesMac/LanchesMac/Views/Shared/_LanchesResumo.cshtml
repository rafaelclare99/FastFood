@model Lanche





<div class="col-sm-12 col-md-6 col-lg-4 mb-4">
    <div class="card h-100 shadow-sm">
        <img src="@Model.ImagemUrl" class="card-img-top img-fluid" alt="@Model.LancheNome" style="object-fit: cover; height: 200px;" />

        <div class="card-body d-flex flex-column">
            <a asp-controller="Lanche" asp-action="Details" asp-route-LancheId="@Model.LancheId">@Model.LancheNome</a>
            <h6 class="card-subtitle mb-2 text-muted">Preço: @Model.Preco.ToString("c")</h6>
            <p class="card-text">@Model.DescricaoCurta</p>
            <div>
                <p class="button">
                    <a class="btn btn-primary" id="carButton" asp-controller="CarrinhoCompra"
                       asp-action="AdicionarItemNoCarrinhoCompra" asp-route-LancheId="@Model.LancheId">Incluir no carrinho</a>
                </p>
            </div>

            
        </div>
    </div>
</div>
